<body style="background-color:#1F487E ;  margin-bottom:50px;">
	<div class="container mt-4" style="background-color: white; border-radius: 10px;">
		<h1 style="color: #6290C8;text-align: center;">O jogo das perguntas</h1>
		<form action="/verifyAnswer/:answer" method="POST">
			<hr style="color: #1F487E">
			<div class="form-group" style="text-align: center;">
				<h2 style="color: #6290C8;">{{question}}</h2>
				<br>
				{{#each answers}}
				<a class="btn btn-info" href="/verifyAnswer/{{this}}">{{this}}</a>
				{{/each}}
				<br>
				<br>
				<br>
				<button class="btn btn-info" style="text-align: center;">Responder</button>

			</div>
		</form>

	</div>
</body>